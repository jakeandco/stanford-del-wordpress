{
  "name": "jakeandco/pantheon-wordpress-base",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with Composer, easier configuration, and an improved folder structure, forked from Pantheon's composer managed WP base.",
  "homepage": "https://pantheon.io/docs/guides/wordpress-composer",
  "authors": [
    {
      "name": "Zach Gibb",
      "email": "zach@jakeandco.com",
      "homepage": "https://github.com/zachgibb"
    },
    {
      "name": "Jake Camara",
      "email": "jake@jakeandco.com",
      "homepage": "https://github.com/jakecamara"
    }
  ],
  "keywords": [
    "bedrock",
    "composer",
    "roots",
    "wordpress",
    "wp",
    "wp-config",
    "pantheon"
  ],
  "support": {
    "issues": "https://github.com/pantheon-systems/wordpress-composer-managed/issues",
    "docs": "https://pantheon.io/docs/guides/wordpress-composer"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    },
    {
      "type": "composer",
      "url": "https://connect.advancedcustomfields.com"
    },
    {
      "type": "composer",
      "url": "https://composer.gravity.io"
    },
    {
      "type": "package",
      "package": {
        "name": "junaidbhura/acf-extended-pro",
        "version": "0.9.1.1",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://www.acf-extended.com/"
        },
        "require": {
          "junaidbhura/composer-wp-pro-plugins": "*"
        }
      }
    },
    {
      "type": "path",
      "url": "upstream-configuration"
    },
    {
      "type": "vcs",
      "url": "git@github.com:jakeandco/acf-field-group-composer.git"
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^2.2",
    "vlucas/phpdotenv": "^5.5",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "*",
    "roots/bedrock-disallow-indexing": "*",
    "roots/wordpress": "*",
    "roots/wp-config": "*",
    "roots/wp-password-bcrypt": "*",
    "pantheon-systems/pantheon-mu-plugin": "*",
    "pantheon-upstreams/upstream-configuration": "dev-main",
    "wpackagist-plugin/admin-menu-editor": "^1.14",
    "wpackagist-plugin/alttext-ai": "^1.10",
    "wpackagist-plugin/block-visibility": "^3.7",
    "wpackagist-plugin/ewww-image-optimizer": "^8.1",
    "wpackagist-plugin/pantheon-advanced-page-cache": "*",
    "wpackagist-plugin/redirection": "^5.5",
    "wpackagist-plugin/simple-custom-post-order": "^2.5",
    "wpackagist-plugin/wp-migrate-db": "^2.7",
    "wpackagist-plugin/wp-native-php-sessions": "*",
    "wpackagist-plugin/wps-hide-login": "^1.9",
    "wpackagist-theme/twentytwentyfive": "^1.0",
    "wpengine/advanced-custom-fields-pro": "*",
    "jakeandco/acf-field-group-composer": "^1.3",
    "junaidbhura/acf-extended-pro": "*",
    "yoast/wordpress-seo": "^24.8",
    "cweagans/composer-patches": "^1.7"
  },
  "require-dev": {
    "pantheon-systems/pantheon-wp-coding-standards": "*",
    "roave/security-advisories": "dev-latest",
    "assertwell/shellcheck": "^1.0"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "process-timeout": 0,
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true,
      "cweagans/composer-patches": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "junaidbhura/composer-wp-pro-plugins": true
    },
    "platform": {
      "php": "8.1.31"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp",
    "build-env": {
      "install-cms": [
        "wp core install --title={site-name} --url={site-url} --admin_user={account-name} --admin_email={account-mail} --admin_password={account-pass}",
        "wp option update permalink_structure '/%postname%/'"
      ]
    },
    "composer-scaffold": {
      "locations": {
        "web-root": "./"
      }
    },
    "composer-exit-on-patch-failure": true,
    "enable-patching": true
  },
  "autoload": {
    "classmap": [
      "upstream-configuration/scripts/ComposerScripts.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "@maybe-create-symlinks",
      "bash ./scripts/post-install.sh"
    ],
    "pre-update-cmd": [
      "WordPressComposerManaged\\ComposerScripts::preUpdate"
    ],
    "install-sage": [
      "bash ./private/scripts/helpers.sh install_sage"
    ],
    "maybe-create-symlinks": [
      "bash ./private/scripts/helpers.sh maybe_create_symlinks"
    ],
    "lint": [
      "@lint:php",
      "@lint:phpcs",
      "@lint:bash"
    ],
    "lint:php": [
      "php -l web/wp/wp-settings.php"
    ],
    "lint:phpcs": [
      "vendor/bin/phpcs -s ."
    ],
    "lint:phpcbf": [
      "vendor/bin/phpcbf ."
    ],
    "lint:bash": [
      "shellcheck private/scripts/*.sh"
    ],
    "test": [],
    "post-update-cmd": [
      "WordPressComposerManaged\\ComposerScripts::postUpdate",
      "@maybe-create-symlinks"
    ]
  },
  "suggest": {
    "pantheon-systems/upstream-management": "Composer plugin that provides commands for managing custom upstreams on Pantheon."
  }
}
