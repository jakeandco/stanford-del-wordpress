{% embed '@views/tease.twig' with {
  tease_options: {
    extra_classes:'has-overlay-background',
  },
  post
} only %}
  {% block content %}
    {% set full_post = get_post(post) %}

    <div class="row">
      {% if post.thumbnail %}
        <div class="col-12 col-md-5 img-holder">
          {% include "@partial/media-item.twig" with { image: post.thumbnail } only %}
        </div>
        <div class="col-12 col-md-5 text-holder">
      {% else %}
        <div class="col-12 col-md-10 text-holder">
      {% endif %}

        <div class="date">Insight  Â·  July 12, 2025</div>
        <h2 class="h5"><a href="{{post.link}}">{{post.post_title}}</a></h2>

        <ul class="category-list list-unstyled">
          <li>
            <a href="{{full_post.link}}" class="btn btn--secondary">{{ full_post.category().name }}</a>
          </li>
        </ul>
      </div>

      <div class="col-12 col-md-2 text-holder">
        <a href="{{post.link}}" class="btn btn-secondary">
          <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1.71928 10.0212L0.980469 9.28234L8.22787 2.03494H1.57856V0.979492H10.0221V9.42307H8.96669V2.77375L1.71928 10.0212Z" fill="black"/>
          </svg>
        </a>
      </div>
    </div>
  {% endblock %}
{% endembed %}
