{% embed '@partial/block_wrapper.twig' with { extra_classes: 'block_body-copy' } %}
  {% block content %}
    <div class="container">
      {% if fields.title %}
        <span class="d-block block-title">{{fields.title}}</span>
      {% endif %}
      <div class="row justify-content-between">
        <div class="col-12 col-md-8 text-holder">
          {% if fields.heading %}
            <h5>{{fields.heading}}</h5>
          {% endif %}
          {{fields.content}}

          {% if fields.button.url %}
            <a href="{{fields.button.url}}" alt="{{fields.button.alt}}" class="btn btn-primary">{{fields.button.title}} â†’</a>
          {% endif %}
        </div>

        {% if fields.image %}
          <div class="col-12 col-md-3 image-holder">
            {% include '@partial/media-item.twig' with { image: fields.image } only %}
          </div>
        {% endif %}
      </div>
    </div>
  {% endblock %}
{% endembed %}
