{% embed '@partial/block_wrapper.twig' with { extra_classes: 'block_research-area-circle' } %}
  {% block content %}
    <div class="container">
      {% set post_type = 'research-area' %}

      {% if fields.title %}
        <span class="d-block block-title">{{fields.title}}</span>
      {% endif %}

      {% set selections = get_posts({ post_type }) %}

      <div class="research-area-circle">
        {% include '@partial/post-repeater.twig' with { posts: selections } only %}
        <span class="decor decor-1"></span>
        <span class="decor decor-2"></span>
        <span class="decor decor-3"></span>
        <span class="decor decor-4"></span>
      </div>
    </div>
  {% endblock %}
{% endembed %}
