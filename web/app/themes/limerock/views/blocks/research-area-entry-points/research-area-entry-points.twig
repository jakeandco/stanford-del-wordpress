{% embed '@partial/block_wrapper.twig' with { extra_classes: 'block_research-area-entry-points' } %}
  {% block content %}
    <div class="container">
      {% set post_type = 'research-area' %}

      {% if fields.title %}
        <span class="block-title d-block">{{fields.title}}</span>
      {% endif %}
    </div>

    {% set selections = get_posts({ post_type }) %}

    {% if fields.variation == 'cards' %}

      <div class="research-area-wrapper research-area-wrapper--{{fields.variation}}">
        {% include '@partial/post-repeater.twig' with { posts: selections, theme_attr: 'data-bs-theme="white"' } only %}
      </div>

    {% else %}

      <div class="research-area-wrapper research-area-wrapper--{{fields.variation}}">
        <div class="swiper-titles-pagination container d-none d-md-flex">
          {% for post in selections %}
            <div class="pagination-item">{{ post.title }}</div>
          {% endfor %}
        </div>

        <div class="research-swiper">
          <!-- If we need pagination -->
          <div class="swiper-pagination"></div>

          <!-- Additional required wrapper -->
          <div class="research-area-wrapper swiper-wrapper variation-{{fields.variation}}">
            {% include '@partial/post-repeater.twig' with { posts: selections } only %}
          </div>

          <!-- If we need navigation buttons -->
          <div class="container swiper-buttons-holder">
            <div class="swiper-button-prev">
              <svg width="27" height="26" viewBox="0 0 27 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M26.2721 11.8677L26.2721 14.0585L4.78145 14.0585L14.64 23.9171L13.0752 25.4819L0.556345 12.9631L13.0752 0.444268L14.64 2.00912L4.78145 11.8677L26.2721 11.8677Z" fill="black"/>
              </svg>
            </div>
            <div class="swiper-button-next">
              <svg width="27" height="26" viewBox="0 0 27 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.651743 14.0561L0.651742 11.8653L22.1424 11.8653L12.2838 2.00678L13.8487 0.441925L26.3675 12.9607L13.8487 25.4796L12.2838 23.9147L22.1424 14.0561L0.651743 14.0561Z" fill="black"/>
              </svg>
            </div>
            <div class="swiper-stop-play d-none d-md-flex">
              <svg width="14" height="19" viewBox="0 0 14 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="0.885742" width="2.23059" height="18.96" fill="black"/>
                <rect x="10.9233" width="2.23059" height="18.96" fill="black"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    {% endif %}

  {% endblock %}
{% endembed %}
