{% embed '@partial/block_wrapper.twig' with { extra_classes: 'block_schedule' } %}
  {% block content %}

  <div class="container">

    {% set schedule_object = field_objects.schedule %}

    {% set start_time_obj = get_field_object(schedule_object.key ~ '_start_date_time') %}
    {% set end_time_obj = get_field_object(schedule_object.key ~ '_end_date_time') %}

      {% for row in fields.schedule %}
        <div class="row">

          <div class="col-9">
            <p>{{row.title}}</p>
          </div>
          <div class="col-3">
              <p>{{start_time_obj|merge({value:  row.start_date_time})|datetime('l, F j, Y ha')}}</p>
              â€“
              {{end_time_obj|merge({value:  row.end_date_time})|datetime('l, F j, Y ha')}}</p>
          </div>
          <div class="col">
            {{row.content}}
          </div>
          <div class="col">
            {{row.sidebar_content}}
          </div>
        </div>
      {% endfor %}
    </div>

  {% endblock %}
{% endembed %}
