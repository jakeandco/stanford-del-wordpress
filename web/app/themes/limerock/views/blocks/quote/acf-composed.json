{
  "name": "group_block_quote",
  "title": "Block Details: Quote",
  "fields": [
    {
      "label": "Selection Mode",
      "name": "selection_mode",
      "type": "select",
      "choices": {
        "quote_post": "Quote Post",
        "manual": "Manual"
      }
    },
    {
      "acf_composer_extend": "LimeRockTheme/ACF/fields/post_object",
      "label": "Quote Source",
      "name": "quote_source",
      "post_type": ["quote"],
      "conditional_logic": [
        [
          {
            "fieldPath": "selection_mode",
            "operator": "==",
            "value": "quote_post"
          }
        ]
      ]
    },
    {
      "label": "Manual Quote",
      "name": "manual_quote",
      "type": "wysiwyg",
      "conditional_logic": [
        [
          {
            "fieldPath": "selection_mode",
            "operator": "==",
            "value": "manual"
          }
        ]
      ]
    },
    {
      "acf_composer_extend": "LimeRockTheme/ACF/fields/post_object",
      "label": "Citation",
      "name": "citation",
      "post_type": ["person"],
      "conditional_logic": [
        [
          {
            "fieldPath": "selection_mode",
            "operator": "==",
            "value": "manual"
          }
        ]
      ]
    },
    {
      "label": "CTA",
      "name": "cta",
      "type": "link"
    }
  ],
  "location": [
    [
      {
        "param": "block",
        "operator": "==",
        "value": "limerock/quote"
      }
    ]
  ]
}
