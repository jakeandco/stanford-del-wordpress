{% set block = block|merge({
  backgroundColor: block.backgroundColor|default('warm-light'),
}) %}

{% embed '@partial/block_wrapper.twig' with { extra_classes: 'block_homepage-header' } %}
  {% block content %}
    <div class="container">
      <h1>
        <span class="d-xl-block">{{fields.headline['primary']}}</span>

        <span class="d-xl-block">{{fields.headline['secondary']}}</span>

        <div class="animating-text-holder swiper-container">
          <div class="animating-text-wrapper swiper-wrapper">
            {% for row in fields.headline['animating_text'] %}
              <div class="swiper-slide animating-text mark">{{row['text']}}</div>
            {% endfor %}
          </div>
        </div>
      </h1>
    </div>
  {% endblock %}
{% endembed %}
